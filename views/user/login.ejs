<!DOCTYPE html>
<html lang="en">
<head>
    <title>Login V3</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->    
    <link rel="icon" type="image/png" href="/log-form/images/icons/favicon.ico"/>
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="/log-form/vendor/bootstrap/css/bootstrap.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="/log-form/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="/log-form/fonts/iconic/css/material-design-iconic-font.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="/log-form/vendor/animate/animate.css">
    <!--===============================================================================================-->    
    <link rel="stylesheet" type="text/css" href="/log-form/vendor/css-hamburgers/hamburgers.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="/log-form/vendor/animsition/css/animsition.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="/log-form/vendor/select2/select2.min.css">
    <!--===============================================================================================-->    
    <link rel="stylesheet" type="text/css" href="/log-form/vendor/daterangepicker/daterangepicker.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="/log-form/css/util.css">
    <link rel="stylesheet" type="text/css" href="/log-form/css/main.css">
    <!--===============================================================================================-->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script> <!-- Add SweetAlert library -->
</head>
<body style="height: 100vh;">
    
    <div class="limiter">
        <div class="container-login100" style="background-image: url('reg-form/images/bg-registration-form-1.jpg');">
            <div class="wrap-login100">
                <form id="loginForm" action="/login" method="post" class="login100-form validate-form">
                    
                    <span class="login100-form-logo">
                        <i class="zmdi zmdi-landscape"></i>
                    </span>

                    <span class="login100-form-title p-b-34 p-t-27">
                        Log in
                    </span>
                    <% if (typeof message !== 'undefined') { %>
                        <h3 style="color: red; margin-left: 1.4em;"><%= message %></h3>
                      <% } %>

                    <div class="wrap-input100 validate-input" data-validate="Enter email">
                        <input class="input100" type="text" name="email" id="email" placeholder="Email">
                        <span class="focus-input100" data-placeholder="&#xf207;"></span>
                      </div>

                    <div class="wrap-input100 validate-input" data-validate="Enter password">
                        <input class="input100" type="password" name="password" id="password" placeholder="Password">
                        <span class="focus-input100" data-placeholder="&#xf191;"></span>
                      </div>

                    <div class="contact100-form-checkbox">
                        <input class="input-checkbox100" id="ckb1" type="checkbox" name="remember-me">
                        <label class="label-checkbox100" for="ckb1">
                            Remember me
                        </label>
                    </div>

                    <div class="container-login100-form-btn">
                        <button type="submit" class="login100-form-btn" id="loginButton">
                            Login
                        </button>
                    </div>

                    <div class="text-center p-t-90">
                        <a class="txt1" href="/forgotpassword">
                            Forgot Password?
                        </a>
                    </div>
                    <div class="text-center p-t-90">
                        <a class="txt1" href="/register">
                            Don't have an account? Sign up now
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
    <!--===============================================================================================-->
    <script src="/log-form/vendor/jquery/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="/log-form/vendor/animsition/js/animsition.min.js"></script>
    <!--===============================================================================================-->
    <script src="/log-form/vendor/bootstrap/js/popper.js"></script>
    <script src="/log-form/vendor/bootstrap/js/bootstrap.min.js"></script>
    <!--===============================================================================================-->
    <script src="/log-form/vendor/select2/select2.min.js"></script>
    <!--===============================================================================================-->
    <script src="/log-form/vendor/daterangepicker/moment.min.js"></script>
    <script src="/log-form/vendor/daterangepicker/daterangepicker.js"></script>
    <!--===============================================================================================-->
    <script src="/log-form/vendor/countdowntime/countdowntime.js"></script>
    <!--===============================================================================================-->
    <script src="/log-form/js/main.js"></script>
</body>
</html>
